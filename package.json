{
  "name": "node-library",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "lerna run build",
    "check-types": "tsc --noEmit",
    "clean": "lerna run clean && rimraf coverage",
    "fmt": "prettier --write 'packages/**/{src,test}/**/*.{js,ts}'",
    "lint": "eslint --ext=js,ts ./packages",
    "lint:fix": "eslint --fix --ext=js,ts ./packages",
    "prepublishOnly": "yarn clean && yarn build && yarn verify",
    "release": "lerna publish --conventional-commits",
    "test": "NODE_ENV=test jest --coverage",
    "test:ci": "yarn test --runInBand --colors",
    "test:nocover": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "verify": "yarn lint && yarn check-types && yarn test"
  },
  "devDependencies": {
    "@types/jest": "^25.2.2",
    "@types/node": "^12.12.37",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.21.0",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.0.0",
    "typescript": "^3.9.2"
  },
  "eslintConfig": {
    "extends": [
      "./packages/eslint-config/index.js"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 100
  }
}
