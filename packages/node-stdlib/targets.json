{
  "targets": {
    "node": {
      "action": "compile",
      "requiresRuntime": true,
      "tsconfigPath": "./tsconfig.build.json"
    },
    "deno": {
      "action": "transform",
      "entrypoint": {
        "name": "mod.ts",
        "includeExtension": true
      },
      "deleteImports": ["_runtime/runtime"],
      "replace": {
        "runtime": "Deno"
      }
    }
  },
  "global": ["global.ts"],
  "modules": {
    "bytes": "*",
    "cmd": "node",
    "colors": "*",
    "env": "*",
    "errors": "*",
    "fatal": "node",
    "fs": "node",
    "hex": "*",
    "log": "node",
    "sets": "*",
    "strings": "*",
    "time": "*",
    "util": "node",
    "uuid": "node"
  }
}
